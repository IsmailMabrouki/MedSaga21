<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.example.medsaga21.ShowMedicalHistory">



    <ImageView
        android:id="@+id/showHistoryPrescriptionIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="right"
        tools:ignore="ContentDescription,RtlHardcoded" />


    <TextView
        android:id="@+id/showHistoryDrNameTV"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/doctor_name"
        android:textSize="18sp"
        android:background="@drawable/text_view_design"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/showHistoryDrDetailsTV"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/details"
        android:textSize="18sp"
        android:background="@drawable/text_view_design"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/showHistoryDrDateTV"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/date"
        android:textSize="18sp"
        android:background="@drawable/text_view_design"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        tools:ignore="RtlSymmetry" />



</LinearLayout>
